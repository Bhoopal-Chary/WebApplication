<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>
				Employee Details

			</h2>
		</div>
	</div>
</div>
<table class="table table-bordered table-stripped" style="font-size: small;">
<thead>
<tr>
	<th>
		Username
	</th>
	<th>
		Password
	</th>
	<th>
		Email
	</th>
	<th>
		Edit / Delete
	</th> 

</tr>
</thead>
<tbody>
	
	@foreach (var obj in Model.OrderBy(u => u.Username))
	{
		<tr>
			<td>
				@obj.Username
			</td>
			<td>
				@obj.Password
			</td>
			<td>
				@obj.Email
			</td>
			<td>
					
				 <div class="w-75 btn-group" role="group">
					<a asp-controller="Account" asp-action="AdminEdit" asp-route-id="@obj.EmployeeId" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"></i>
					</a>
					
						@if (ViewBag.UserRole == "Admin")
						{
							<a id="deletebtn" asp-controller="Account" asp-action="Delete" asp-route-id="@obj.EmployeeId" onclick="return confirm('Are you sure?')" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> 
							</a>
						}

				</div> 
			</td>
		</tr>
	}
</tbody>
<tr>
</table>
</div>
